    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle switch styling for checkboxes
            document.addEventListener('turbolinks:load', initializeToggleCheckboxes);
            initializeToggleCheckboxes();

            function initializeToggleCheckboxes() {
                const toggleCheckboxes = document.querySelectorAll('.toggle-checkbox');
                toggleCheckboxes.forEach(checkbox => {
                    updateToggleStyle(checkbox);
                    checkbox.addEventListener('change', function() {
                        updateToggleStyle(this);
                        // 如果是变体选项的复选框，控制变体值预览的显示和隐藏
                        if (this.name === 'variant_options[]') {
                            const optionId = this.value;
                            const previewContainer = document.getElementById(`variant_values_${optionId}`);
                            if (previewContainer) {
                                if (this.checked) {
                                    previewContainer.classList.add('animate-fade-in');
                                    previewContainer.style.display = 'block';
                                } else {
                                    previewContainer.style.display = 'none';
                                }
                            }
                        }
                    });

                    // 初始化变体值预览的显示状态
                    if (checkbox.name === 'variant_options[]') {
                        const optionId = checkbox.value;
                        const previewContainer = document.getElementById(`variant_values_${optionId}`);
                        if (previewContainer) {
                            if (checkbox.checked) {
                                previewContainer.style.display = 'block';
                            } else {
                                previewContainer.style.display = 'none';
                            }
                        }
                    }
                });
            }

            function updateToggleStyle(checkbox) {
                const label = checkbox.nextElementSibling;
                if (checkbox.checked) {
                    checkbox.classList.add('right-0', 'border-indigo-600');
                    checkbox.classList.remove('border-gray-300');
                    label.classList.add('bg-indigo-600');
                    label.classList.remove('bg-gray-300');
                } else {
                    checkbox.classList.remove('right-0', 'border-indigo-600');
                    checkbox.classList.add('border-gray-300');
                    label.classList.remove('bg-indigo-600');
                    label.classList.add('bg-gray-300');
                }
            }
            
            // 为变体值项添加点击事件
            const variantValueItems = document.querySelectorAll('.variant-value-item');
            variantValueItems.forEach(item => {
                item.addEventListener('click', function() {
                    this.classList.toggle('selected');
                    this.classList.toggle('border-indigo-600');
                    this.classList.toggle('bg-indigo-50');
                });
            });
        });

        // 支持Turbolinks加载
        document.addEventListener('turbolinks:load', function() {
            if (typeof Alpine !== 'undefined') {
                Alpine.initTree(document.body);
            }
        });
    </script>

