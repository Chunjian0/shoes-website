    // ‰∏ªË¶ÅÂàùÂßãÂåñÂáΩÊï?    function initializeElements() {
        // Â¶ÇÊûúÂ∑≤ÁªèÂàùÂßãÂåñÔºåÂàô‰∏çÂÜçÈáçÂ§çÊâßË°?        const container = document.querySelector('.notification-history-container');
