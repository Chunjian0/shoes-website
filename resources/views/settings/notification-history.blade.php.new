        // ÂàùÂßãÂåñÊ®°ÊÄÅÊ°Ü
        initializeModal();

        // ÂàùÂßãÂåñÊé•Êî∂‰∫∫ÈÄâÊã©Âô?        initializeRecipientSelectors();

